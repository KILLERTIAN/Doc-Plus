{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/backend/patients/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/backend/pdinteraction/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/backend/doctors/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/backend/hospitals/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
